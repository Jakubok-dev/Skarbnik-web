# This is an example of a .env file 

# Port when app is listening
PORT=4000

# After this time new token secret will be generated
# Examples:
# TOKEN_SECRET_MAX_AGE=7s
# TOKEN_SECRET_MAX_AGE=15m
# TOKEN_SECRET_MAX_AGE=14h
# TOKEN_SECRET_MAX_AGE=3d

TOKEN_SECRET_MAX_AGE=7d

# CORS settings

# Port which CORS origins must have to be allowed
CORS_ORIGIN_PORT=3000

# Your custom CORS origin
#CORS_ORIGIN=https://example.com:3000

LOCALHOST_IS_CORS_ORIGIN=true
IS_LOCALHOST_HTTPS=false

LOCAL_IP_ADRESSES_ARE_CORS_ORIGINS=true
ARE_LOCAL_IP_ADRESSES_HTTPS=false
